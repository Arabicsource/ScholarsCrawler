<h1>
  Scholar: <%= @scholar.name %>
  <span style="font-size: 50%">
    <%= link_to 'Update', edit_scholar_path %>
  </span>
  <span style="font-size: 50%">
    <%= link_to 'Delete', @scholar, method: 'delete', data: { confirm: 'Are you sure you want to delete this scholar?' } %>
  </span>
</h1>
<p>
  <b>Last updated:</b> <%= @scholar.scraped_at %>
</p>

<p>
  <b>Current Position:</b> <%= @scholar.current_position %>
</p>
<p>
  <b>PhD:</b> <%= @scholar.phd %>
</p>
<p>
  <b>Last Institution:</b> <%= @scholar.last_institution %>
</p>
<p>
  <b>Last Job:</b> <%= @scholar.last_job %>
</p>

<p>
  <img src="<%= @scholar.image_url %>" />
</p>

<h2>
  <%= link_to "Google Scholar Citations", "http://scholar.google.com/citations?user=#{@scholar.google_scholar_id}&hl=en" %>
</h2>

<p>
<table border=1 cellspacing="0" cellpadding="5">
  <tbody>
    <tr>
      <td>&nbsp;</td>
      <td>All</td>
      <td><%= since(@scholar) %></td>
    </tr>
    <tr>
      <td>Citations</td>
      <td><%= @scholar.citations %></td>
      <td><%= @scholar.recent_citations %></td>
    </tr>
    <tr>
      <td>h-index</td>
      <td><%= @scholar.hindex %></td>
      <td><%= @scholar.recent_hindex %></td>
    </tr>
    <tr>
      <td>i10-index</td>
      <td><%= @scholar.i10index %></td>
      <td><%= @scholar.recent_i10index %></td>
    </tr>
  </tbody>
</table>
</p>

<% if !@scholar.dblp_author_id.blank? && @scholar.scholar_venues.length > 0 %>

<h2>
<%= link_to "DBLP Venues", "http://www.dblp.org/search/index.php#query=author:#{@scholar.dblp_author_id}" %>
</h2>

<ul>
<% @scholar.scholar_venues.each do |scholar_venue| %>
  <li>
    <%= scholar_venue %>
  </li>
<% end %>
</ul>

<% end %>

<p>
  <%= link_to 'List all scholars', scholars_path %>
</p>
